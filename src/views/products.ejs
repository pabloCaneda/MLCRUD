Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% for( let index = 0; index < products.length; index++ ) { %>	
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= products[index].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= products[index].image %>" alt="imagen de producto">
							
						</figure>
						<article class="product-box_data">
							<h2 id="miId">
								<% if (products[index].discount !== 0) { %>
									<p id="miP"><%= products[index].price.toLocaleString() %></p id="miP">
								<% } %>
							
							</h2>
							<h2>$<% if (products[index].discount === 0) { %>
								<%= products[index].price.toLocaleString() %>
							<% } else { %>
								<%= (products[index].price - (products[index].price * products[index].discount / 100)).toLocaleString() %>
							<% } %></h2>
							
							<span><%= products[index].discount %>% OFF</span>
							
							<p><%= products[index].name %></p>
							
							<i class="fas fa-truck"></i>
						</article>
						
					</a>
				</section>
			</div>
			<% } %>

		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>